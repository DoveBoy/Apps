        "url": "https://github.com/syncthing/syncthing#MPL-2.0-1-ov-file"
    },
    "notes": "To start syncthing automatically, use a method described at https://docs.syncthing.net/users/autostart.html#windows",
    "architecture": {
        "64bit": {
            "url": "https://github.com/syncthing/syncthing/releases/download/v1.28.1-rc.2/syncthing-windows-amd64-v1.28.1-rc.2.zip",
            "hash": "bdf56d4b59729a0d80b89af8139d89425e6c1313393e1708242ab4775687281d",
            "extract_dir": "syncthing-windows-amd64-v1.28.1-rc.2"
        },
        "32bit": {
            "url": "https://github.com/syncthing/syncthing/releases/download/v1.28.1-rc.2/syncthing-windows-386-v1.28.1-rc.2.zip",
            "hash": "1780156d55c72280da71cb96d47257760ddb9d18e2429fc25f159af9e0902d18",
            "extract_dir": "syncthing-windows-386-v1.28.1-rc.2"
        },
        "arm64": {
            "url": "https://github.com/syncthing/syncthing/releases/download/v1.28.1-rc.2/syncthing-windows-arm64-v1.28.1-rc.2.zip",
            "hash": "9c9597be2d1b2fc1e4c0e5080fe9ddcaf5ac27f979d359941f1b00d27ad223f6",
            "extract_dir": "syncthing-windows-arm64-v1.28.1-rc.2"
        },
        "arm32": {
            "url": "https://github.com/syncthing/syncthing/releases/download/v1.28.1-rc.2/syncthing-windows-arm-v1.28.1-rc.2.zip",
            "hash": "c14999de683d13fd091599d85bd00a3e2d272a29ef78a1d868297aeafa5d0bdf",
            "extract_dir": "syncthing-windows-arm-v1.28.1-rc.2"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\config\") -and (Test-Path \"$env:LOCALAPPDATA\\Syncthing\")) {",
        "    info \"Copying old '$env:LOCALAPPDATA\\Syncthing' to '$persist_dir\\config'\"",
        "    ensure \"$dir\\config\" | Out-Null",
        "    Copy-Item \"$env:LOCALAPPDATA\\Syncthing\\*\" \"$dir\\config\" -Exclude 'LOCK' -Recurse -Force",
        "}"
    ],
    "bin": [
        [
            "syncthing.exe",
            "syncthing",
            "-home \"$dir\\config\""
        ]
    ],
    "persist": "config",
    "checkver": {
        "url": "https://api.github.com/repos/syncthing/syncthing/releases",
        "regex": "/releases/tag/v(([\\d.]+)-([\\w.]+))"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/syncthing/syncthing/releases/download/v$version/syncthing-windows-amd64-v$version.zip",
                "extract_dir": "syncthing-windows-amd64-v$version"
            },
            "32bit": {
                "url": "https://github.com/syncthing/syncthing/releases/download/v$version/syncthing-windows-386-v$version.zip",
                "extract_dir": "syncthing-windows-386-v$version"
            },
            "arm64": {
                "url": "https://github.com/syncthing/syncthing/releases/download/v$version/syncthing-windows-arm64-v$version.zip",
                "extract_dir": "syncthing-windows-arm64-v$version"
            },
            "arm32": {
                "url": "https://github.com/syncthing/syncthing/releases/download/v$version/syncthing-windows-arm-v$version.zip",
                "extract_dir": "syncthing-windows-arm-v$version"
            }
        },
        "hash": {
            "url": "$baseurl/sha256sum.txt.asc"
        }
    }
}
