{
    "version": "1.29.0-rc.2",
    "description": "Open Source Continuous File Synchronization.",
    "homepage": "https://syncthing.net/",
    "license": {
        "identifier": "MPL-2.0 license",
        "url": "https://github.com/syncthing/syncthing#MPL-2.0-1-ov-file"
    },
    "notes": "To start syncthing automatically, use a method described at https://docs.syncthing.net/users/autostart.html#windows",
    "architecture": {
        "64bit": {
            "url": "https://github.com/syncthing/syncthing/releases/download/v1.29.0-rc.2/syncthing-windows-amd64-v1.29.0-rc.2.zip",
            "hash": "8be83272833b8ba92f81a00971c3a7c0e75ed4ee7a045d1d25a8d8655abaca9a",
            "extract_dir": "syncthing-windows-amd64-v1.29.0-rc.2"
        },
        "32bit": {
            "url": "https://github.com/syncthing/syncthing/releases/download/v1.29.0-rc.2/syncthing-windows-386-v1.29.0-rc.2.zip",
            "hash": "81be07be17b10fcd97faccfabeb720f4073a22e27d7b31c493d987a04e306b8a",
            "extract_dir": "syncthing-windows-386-v1.29.0-rc.2"
        },
        "arm64": {
            "url": "https://github.com/syncthing/syncthing/releases/download/v1.29.0-rc.2/syncthing-windows-arm64-v1.29.0-rc.2.zip",
            "hash": "dcae7d0c8efb6be98d7cef9794c17f853eb0a0f614bbf27e41d14c9144e548f7",
            "extract_dir": "syncthing-windows-arm64-v1.29.0-rc.2"
        },
        "arm32": {
            "url": "https://github.com/syncthing/syncthing/releases/download/v1.29.0-rc.2/syncthing-windows-arm-v1.29.0-rc.2.zip",
            "hash": "d7813235b6a79dc9e51513c6053592c5238ce8d6dc5a5c106f58894e90986860",
            "extract_dir": "syncthing-windows-arm-v1.29.0-rc.2"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\config\") -and (Test-Path \"$env:LOCALAPPDATA\\Syncthing\")) {",
        "    info \"Copying old '$env:LOCALAPPDATA\\Syncthing' to '$persist_dir\\config'\"",
        "    ensure \"$dir\\config\" | Out-Null",
        "    Copy-Item \"$env:LOCALAPPDATA\\Syncthing\\*\" \"$dir\\config\" -Exclude 'LOCK' -Recurse -Force",
        "}"
    ],
    "bin": [
        [
            "syncthing.exe",
            "syncthing",
            "-home \"$dir\\config\""
        ]
    ],
    "persist": "config",
    "checkver": {
        "url": "https://api.github.com/repos/syncthing/syncthing/releases",
        "regex": "/releases/tag/v(([\\d.]+)-([\\w.]+))"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/syncthing/syncthing/releases/download/v$version/syncthing-windows-amd64-v$version.zip",
                "extract_dir": "syncthing-windows-amd64-v$version"
            },
            "32bit": {
                "url": "https://github.com/syncthing/syncthing/releases/download/v$version/syncthing-windows-386-v$version.zip",
                "extract_dir": "syncthing-windows-386-v$version"
            },
            "arm64": {
                "url": "https://github.com/syncthing/syncthing/releases/download/v$version/syncthing-windows-arm64-v$version.zip",
                "extract_dir": "syncthing-windows-arm64-v$version"
            },
            "arm32": {
                "url": "https://github.com/syncthing/syncthing/releases/download/v$version/syncthing-windows-arm-v$version.zip",
                "extract_dir": "syncthing-windows-arm-v$version"
            }
        },
        "hash": {
            "url": "$baseurl/sha256sum.txt.asc"
        }
    }
}
