            "hash": "sha512:aa60d115c957634037804ba289f7bc69d6af15858a6315ec7fa9f0a8d2a618713ad59fa24e7a5cec078daf97a313a5672a597a4e9f850c8c2e91c9cb7ed9ee53",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\`$R0\" -Force -Recurse"
            ]
        },
        "32bit": {
            "url": "https://github.com/rubickCenter/rubick/releases/download/v4.2.8/rubick-Setup-4.2.8-ia32.exe#/dl.7z",
