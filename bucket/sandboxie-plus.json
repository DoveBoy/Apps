    "license": {
        "identifier": "GPL-3.0-or-later",
        "url": "https://github.com/sandboxie-plus/Sandboxie/blob/master/LICENSE"
    },
    "notes": "Get Sandboxie Classic if you have used Sandboxie for a long time and prefer a familiar environment over new features.",
    "architecture": {
        "64bit": {
            "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/v1.4.0/Sandboxie-Plus-x64-v1.4.0.exe",
            "hash": "092dcc3c21a11f05572477ae246286224ea16484621249556b6dc6dd9e7e851f"
        },
        "32bit": {
            "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/v1.4.0/Sandboxie-Plus-x86-v1.4.0.exe",
            "hash": "40d3ff59eed15465154b92ee50cd906cae15b5b912a96059583e3d95462a7eb8"
        }
    },
    "innosetup": true,
    "installer": {
        "script": [
            "ensure \"$persist_dir\" | Out-Null",
            "New-Item \"$env:LOCALAPPDATA\\Sandboxie-Plus\" -ItemType Junction -Target \"$persist_dir\" | Out-Null"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$env:LOCALAPPDATA\\Sandboxie-Plus\" -ErrorAction 'SilentlyContinue' -Force -Recurse"
    },
    "shortcuts": [
        [
            "SandMan.exe",
            "Sandboxie-Plus//Sandboxie-Plus"
        ],
        [
            "Start.exe",
            "Sandboxie-Plus//Run any program sandboxed",
            "/box:__ask__ run_dialog"
        ],
        [
            "Start.exe",
            "Sandboxie-Plus//Run Web browser sandboxed",
            "default_browser"
        ],
        [
            "Start.exe",
            "Sandboxie-Plus//Sandboxie Start Menu",
            "/box:__ask__ start_menu"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/sandboxie-plus/Sandboxie/releases",
        "regex": "releases/download/(?<tag>[vV]?[\\d.]+)/Sandboxie-Plus-x64-v([\\d.]+).exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/$matchTag/Sandboxie-Plus-x64-v$version.exe"
            },
            "32bit": {
                "url": "https://github.com/sandboxie-plus/Sandboxie/releases/download/$matchTag/Sandboxie-Plus-x86-v$version.exe"
            }
        }
    }
}
