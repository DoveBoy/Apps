{
    "version": "3.0.2",
    "description": "支持视频号、小程序、抖音、快手、小红书、酷狗、QQ音乐等网络资源下载!",
    "homepage": "https://github.com/putyy/res-downloader",
    "license": {
        "identifier": "MIT license",
        "url": "https://github.com/putyy/res-downloader#MIT-1-ov-file"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/putyy/res-downloader/releases/download/3.0.2/res-downloader_3.0.2_x64-installer.exe",
            "hash": "c70ca49d86d05cfdd62d8c35eded9abcb18c8f5222e29387adfca0d97f5fa849"
        },
        "arm64": {
            "url": "https://github.com/putyy/res-downloader/releases/download/3.0.2/res-downloader_3.0.2_arm64-installer.exe",
            "hash": "1874ec9d47be344d74a0feadde04d3348b359513e307823602f7bd9e588c34a7"
        }
    },
    "pre_install": "Get-ChildItem \"$dir\\res-downloader*.exe\" | Rename-Item -NewName 'res-downloader.exe'",
    "installer": {
        "script": [
            "# handle runtime cache",
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Mount-ExternalRuntimeData -Source \"$persist_dir\" -Target \"$env:APPDATA\\res-downloader\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "uninstaller": {
        "script": [
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name apps) scripts/AppsUtils.psm1)",
            "Dismount-ExternalRuntimeData -Target \"$env:APPDATA\\res-downloader\"",
            "Remove-Module -Name AppsUtils"
        ]
    },
    "shortcuts": [
        [
            "res-downloader.exe",
            "res-downloader"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/putyy/res-downloader/releases",
        "regex": "/releases/tag/([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/putyy/res-downloader/releases/download/$version/res-downloader_$version_x64-installer.exe"
            },
            "arm64": {
                "url": "https://github.com/putyy/res-downloader/releases/download/$version/res-downloader_$version_arm64-installer.exe"
            }
        }
    }
}
